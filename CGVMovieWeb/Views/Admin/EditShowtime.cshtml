@model CGVMovieWeb.Models.Showtime

@{
    ViewBag.Title = "Sửa Lịch Chiếu";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2 class="text-center mb-4">Sửa Lịch Chiếu</h2>

<div class="container card shadow-sm rounded-3">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ShowtimeID)

            <!-- Chọn Phim -->
            <div class="mb-3">
                <label for="MovieID" class="form-label d-flex align-items-center">
                    <i class="bi bi-film me-2"></i> Chọn Phim
                </label>
                @Html.DropDownList("MovieID", null, "Chọn Phim", new { @class = "form-control rounded-3 shadow-sm" })
                @Html.ValidationMessageFor(model => model.MovieID, "", new { @class = "text-danger" })
            </div>

            <!-- Ngày Chiếu -->
            <div class="mb-3">
                <label for="ShowDate" class="form-label d-flex align-items-center">
                    <i class="bi bi-calendar3 me-2"></i> Ngày Chiếu
                </label>
                @Html.EditorFor(model => model.ShowDate, new { htmlAttributes = new { @class = "form-control rounded-3 shadow-sm", type = "date" } })
                @Html.ValidationMessageFor(model => model.ShowDate, "", new { @class = "text-danger" })
            </div>

            <!-- Thời Gian -->
            <div class="mb-3">
                <label for="StartTime" class="form-label d-flex align-items-center">
                    <i class="bi bi-clock me-2"></i> Thời Gian
                </label>
                @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control rounded-3 shadow-sm", type = "time" } })
                @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
            </div>

            <!-- Phòng -->
            <div class="mb-3">
                <label for="Room" class="form-label d-flex align-items-center">
                    <i class="bi bi-door-closed me-2"></i> Phòng
                </label>
                @Html.EditorFor(model => model.Room, new { htmlAttributes = new { @class = "form-control rounded-3 shadow-sm", placeholder = "Nhập số phòng chiếu" } })
                @Html.ValidationMessageFor(model => model.Room, "", new { @class = "text-danger" })
            </div>

            <!-- Nút Lưu và Hủy -->
            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-primary rounded-3 shadow-sm me-2">
                    <i class="bi bi-save me-1"></i> Lưu
                </button>
                <a href="@Url.Action("ShowtimesList", "Admin")" class="btn btn-secondary rounded-3 shadow-sm">
                    <i class="bi bi-arrow-left-circle me-1"></i> Quay Lại
                </a>
            </div>
        }
    </div>
</div>
